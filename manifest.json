{
    "name": "History Cabinet",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Browsing Browser"
    },
    "background": {
        "scripts": [
            "dexie.js",
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "permissions": [ "tabs", "identity" ],
    "web_accessible_resources": ["empty_table.xlsx"],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}