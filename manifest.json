{
    "name": "browsing_browser",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Browsing Browser"
    },
    "background": {
        "scripts": [
            "dexie.js",
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "identity",
        "identity.email"
    ],
    "web_accessible_resources": ["empty_table.xlsx"],
    "content_security_policy": "script-src 'self' https://apis.google.com https://csi.gstatic.com; object-src 'self'",
    "oauth2": {
        "client_id": "",
        "scopes": ["openid", "email"]
    }
}